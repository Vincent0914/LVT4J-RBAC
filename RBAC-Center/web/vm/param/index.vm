#set($navs=['配置项管理'])
#set($pageDesc='所有使用授权中心的产品的配置项的查询，修改与删除')
#parse('/header.vm')

<script src="/vm/param/index.js"></script>

##配置项编辑
<div id="editParamDiv" class="col-xs-12" style="display:none;"><div class="widget-box">
<div class="widget-header">
    <h4 class="widget-title" style="word-break:break-all;">编辑配置项</h4>
    <div class="widget-toolbar">
        <a href="javascript:;" onclick="$(this).closest('.col-xs-12').slideUp()">
            <i class="ace-icon fa fa-close bigger-130"></i>
        </a>
    </div>
</div>
<div class="widget-body"><div class="widget-main">
<form class="form-horizontal">
    <p class="valid-err text-danger col-xs-9 col-xs-offset-3"></p>
    <input name="oldKey" type="hidden"/>
    <div class="form-group">
        <label class="col-xs-3 control-label">key：</label>
        <div class="col-xs-9">
            <input name="key" data-required data-regex="^[a-zA-Z][a-zA-Z0-9_]*$"
                data-err="配置项key不能为空,且必须以字母开头,以字母数字下划线组成"
                type="text" class="form-control" placeholder="与其他配置项区分的key,同时也是配置数据的key"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 control-label">名称：</label>
        <div class="col-xs-9">
            <input name="name" data-required data-err="配置项名称不能为空"
                type="text" class="form-control" placeholder="配置项名称，短名称"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 control-label">描述：</label>
        <div class="col-xs-9">
            <textarea name="des" data-required data-err="配置项描述不能为空"
                type="text" class="form-control" style="min-height:150px;" placeholder="配置项描述"></textarea>
        </div>
    </div>
    <button type="button" class="btn btn-purple btn-block" onclick="editParamSave()">保存</button>
</form>
</div></div>##widget-body
</div></div>##widget-box

##配置项列表
<div class="col-xs-12"><div class="widget-box">
<div class="widget-header">
    <h4 class="widget-title">配置项列表</h4>
</div>
<div id="paramsDiv" class="widget-body" style="display:none;"><div class="widget-main" style="padding-bottom:52px;">
<table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom:0;">
    <thead>
        <tr>
            <td style="width:30%;" title="配置项的key">key</td>
            <td title="配置项的名称">名称</td>
            <td style="width:88px;">
                <button onclick="addParam()" title="增加一个新配置项" type="button" class="btn btn-primary btn-minier">新增</button>
            </td>
        </tr>
    </thead>
    <tbody id="params"></tbody>
</table>
</div></div>##widget-body
</div></div>##widget-box
